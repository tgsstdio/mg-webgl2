{
    "compilerOptions": {
        "target":"es6",
        "module": "umd",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "ut",      
        "sourceMap": false,
        "strictNullChecks":true,
        "alwaysStrict":true,
        "noImplicitThis":true,
        "noFallthroughCasesInSwitch":true,
        "types" : ["webgl2", "mocha"]
    },
    "include": [
        "mg/*",
        "mg-webgl/*",
        "test/",
        "node_modules/chai/"
    ],
    "exclude": [
        "**/*.spec.ts"
    ]
}